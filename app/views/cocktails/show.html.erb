<h1>Here are the details about the cocktail:<%= @cocktail.name.capitalize%> </h1>
<!-- <h1><%=@cocktail.ingredients%> </h1> -->

<h2>Ingredients</h2>

<% @cocktail.ingredients.each do |ingredient|%>
  <li><%= ingredient.name.capitalize%></li>
<% end%>

<h2>Recipe / Dose</h2>

<% @cocktail.doses.each do |dose|%>
  <li><%= dose.description.capitalize+ " "+ dose.ingredient.name%> </li>
  <%= link_to "Suppress this dose", cocktail_dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end%>

<%= link_to "Back to all", cocktails_path %>

